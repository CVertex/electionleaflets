<VirtualHost *:80>
    ServerName dev.fairdinkum.org.au
    DocumentRoot "/srv/www/dev.fairdinkum.org.au/fairdinkum/docs/"

    <Directory "/srv/www/dev.fairdinkum.org.au/fairdinkum/docs/">
      AllowOverride All
      Order allow,deny
      Allow from all

      php_value include_path ".:/srv/www/dev.fairdinkum.org.au/fairdinkum/includes:/srv/www/dev.fairdinkum.org.au/fairdinkum/includes/PEAR:/srv/www/dev.fairdinkum.org.au/fairdinkum/config"
    </Directory>

    ErrorLog /srv/www/dev.fairdinkum.org.au/log/error_log
    CustomLog /srv/www/dev.fairdinkum.org.au/access_log common

    ErrorDocument 404 /the404.php
</VirtualHost>

